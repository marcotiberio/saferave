<div class="flyntComponent" style="background-color: {{ backgroundColor|e }};" is="flynt-block-boxes">
  <div class="container fullWidthContainer">
    <ul class="items">
      {% for guideline in guidelines %}
      <li class="item">
      {% if guideline.icon or guideline.text %}
        <div class="item-icon">
          <img class="content-image lazyload"
            src="{{ guideline.icon.src|resizeDynamic(424, 283) }}"
            srcset="{{ placeholderImage(3, 2) }}"
            data-srcset="
              {{ guideline.icon.src|resizeDynamic(312, 208) }} 312w"
            data-sizes="auto"
            alt="{{ guideline.icon.alt|e }}">
        </div>
        <div class="item-description">{{ guideline.text|e('wp_kses_post') }}</div>
      </li>
      {% endif %}
      {% endfor %}
    </ul>
  </div>
</div>
