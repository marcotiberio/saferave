<div class="flyntComponent" style="background-color: {{ backgroundColor|e }}" is="flynt-block-downloads">
  <div class="container fullWidthContainer">
    {% if preContentHtml %}
      <div class="preContent centerMaxWidthContainer-half">
        {{ preContentHtml|e('wp_kses_post') }}
      </div>
    {% endif %}
    <ul class="items">
      {% for download in downloads %}
      <li class="item">
        {% if download.link %}
          <a href="{{ download.link.url }}" {{ download.link.target ? "target='#{download.link.target}' rel='noopener noreferrer'" }} class="item-link button button--link">
            {{ download.link.title ?: download.link.url }}
          </a>
        {% endif %}
      </li>
      {% endfor %}
    </ul>
  </div>
</div>
